<div class="container justify-content-center">
    <div class="row m-5 text-start col-12 blur p-3 rounded-3">
        <p class="form-text mb-0 pb-2 col-8">
            Comprar silver en <%=game.nombre%>
        </p>
        <div class="col-8 bg-black p-3 rounded-3 ">
            <form>
                <div class="row gx-5 mt-3">
                    <div class="col-6">
                        <select
                            id="juegoInput"
                            class="form-select bg-input text-white-50 border-0"
                        >
                            <% for(oneGame of games) { %>
                            <option value="game/<%= oneGame.juego_id %>" 
                                <% if (oneGame.juego_id == game.juego_id) { %>
                                <%="selected"%>
                                <% } %>
                                >
                                <%= oneGame.nombre %>
                            </option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-6">
                        <select
                            class="form-select bg-input text-white-50 border-0"
                            id="serverInput"
                        >
                            <% for(oneServer of server) { %>
                            <option
                                value="<%= oneServer.servidor_id %>">
                                <%= oneServer.nombre %>
                            </option>
                             <% } %>
                        </select>
                    </div>
                    <div class="col-5 mt-4">
                      <label for="cantidad" class="form-label">Cantidad de oro /K:</label>
                      <input
                            type="number"
                            id="cantidad-input"
                            class="form-control bg-input text-white-50 border-0 rounded-2"
                            placeholder="600"
                        />
                    </div>
                    <div class="col-5 mt-4">
                      <label for="personaje" class="form-label">Personaje:</label>
                        <input
                        type="text"
                        id="personaje"
                            class="form-control bg-input text-white-50 border-0 rounded-2"
                            placeholder="Nombre de personaje"
                        >
                        </input>
                    </div>
                </div>
            </form>
            <div class="col-12 text-center p-5 mt-4">
              <p id="total2" class="form-total-text mt-3">Total: <strong>$ --</strong></p>
              <button type="submit" class="btn btn-primary form-submit px-5 mt-1">Comprar</button>
            </div>
        </div>
        <div class="col-3 bg-black text-white text-center mx-2 rounded-3">
            <p class="unit-text m-3 pt-4"><strong>$ </strong><strong id="price"> <%=server[0].price %></strong> /k</p>
            <p class="text-info"><%=(server[0].stock).toLocaleString()%> k in Stock</p>
            <p class="form-resumen m-3 pt-5 pb-1 border-bottom">RESUMEN</p>
            <p class="text-info"><strong>Juego:</strong> <%=game.nombre%></p>
            <p class="text-info"><strong>Servidor:</strong> <%=server[0].nombre%></p>
            <p id="cantidad" class="text-info"><strong>Cantidad:</strong> --</p>
            <p class="form-resumen m-3 py-2 border-top">
                <strong>Total: </strong> $<span id="total"> --</span>
            </p>
        </div>
    </div>
</div>

<script src="/js/total.js"></script>